function __autoload($classname)
{
  $dirs = array(
    './include/core/',
    './include/datasources/',
    './include/throwables/',
    './include/server/',
    './include/protocols/',
    './include/modules/',
    './include/interfaces/'
  );

  $found = false;
  foreach($dirs as $d)
  {
    if (is_file($d.$classname.'.lib'))
    {
      include_once $d.$classname.'.lib';
      $found = true;
      break;
    }
  }

  if (!$found)
    throw new WAError("The common library <b>$classname</b> has not been found.");
}

?>