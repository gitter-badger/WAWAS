function XBautoload($classname)
{
  global $BASEDIR;

  if (is_file($BASEDIR . 'include/'.str_replace('\\', '/', $classname).".lib"))
  {
    include_once $BASEDIR . 'include/'.str_replace('\\', '/', $classname).".lib";
    return;
  }
  elseif (is_file($BASEDIR . 'application/'.str_replace('\\', '/', $classname).".lib"))
  {
    include_once $BASEDIR . 'application/'.str_replace('\\', '/', $classname).".lib";
    return;
  }

  $dirs = array(
    $BASEDIR . 'include.ns/common/',
    $BASEDIR . 'application.ns/structures/',
    $BASEDIR . 'application.ns/entities/',
    $BASEDIR . 'application.ns/graph/',
    $BASEDIR . 'include.ns/core/',
    $BASEDIR . 'include.ns/dominion/',
    $BASEDIR . 'include.ns/xamboo/',
    $BASEDIR . 'include.ns/patterns/',
    $BASEDIR . 'include.ns/datasources/',
    $BASEDIR . 'include.ns/throwables/',
    $BASEDIR . 'include.ns/wajaf/'
  );

  $found = false;
  foreach($dirs as $d)
  {
    if (is_file($d.$classname.".lib"))
    {
      include_once $d.$classname.".lib";
      $found = true;
      break;
    }
  }

  if (!$found) // do not interfere with other autoloads
  {
    return;
  }
//    throw new Exception("The common library <b>$classname</b> doesn't exist.");
}

spl_autoload_register('XBautoload');

?>
